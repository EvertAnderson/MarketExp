@model IEnumerable<Yachay.Entities.Pedido>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row page-titles">
        <div class="col-md-6 col-8 align-self-center">
            <h3 class="text-themecolor m-b-0 m-t-0">Pedidos</h3>
        </div>
        <div class="col-md-6 col-4 align-self-center">
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-block">
                    <div class="col-md-12" style="margin-bottom:7px;">
                        <a class="btn btn-md btn-info pull-right" href="@Url.Action("Pedido", "Pedidos", new { id = 0 })">Nuevo</a>
                    </div>
                    <br />
                    <table class="dataTable table table-striped table-hover" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>
                                    Nombre
                                </th>
                                <th>
                                    Descripcion
                                </th>
                                <th>
                                    Cantidad
                                </th>
                                <th>
                                    Tomada
                                </th>
                                <th>
                                    Fecha
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Nombre
                                    </td>
                                    <td>
                                        @item.Descripcion
                                    </td>
                                    <td>
                                        @item.Cantidad
                                    </td>
                                    <td class="@(item.Activo == true ? "text-success" : "text-danger")">
                                        @(item.Activo == true ? "Tomado" : "Pendiente")
                                    </td>
                                    <td>
                                        @item.Fecha
                                    </td>
                                    <td>
                                        @Html.ActionLink("Propuestas", "Propuestas", "Pedidos", new { idPedido = item.IdPedido }, new { }) |
                                        @Html.ActionLink("Editar", "Pedido", "Pedidos", new { id = item.IdPedido }, new { })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <hr />
                </div>
            </div>
        </div>
    </div>
</div>


