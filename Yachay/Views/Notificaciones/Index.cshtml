@model IEnumerable<Yachay.Entities.Alerta>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row page-titles">
        <div class="col-md-6 col-8 align-self-center">
            <h3 class="text-themecolor m-b-0 m-t-0">Notificaciones</h3>
        </div>
        <div class="col-md-6 col-4 align-self-center">
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-block">
                    <table class="dataTable table table-striped table-hover" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>
                                    Nombre
                                </th>
                                <th>
                                    Descripcion
                                </th>
                                <th>
                                    Cantidad
                                </th>
                                <th>
                                    Fecha
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Nombre
                                    </td>
                                    <td>
                                        @item.Descripcion
                                    </td>
                                    <td>
                                        @item.Cantidad
                                    </td>
                                    <td>
                                        @item.Fecha
                                    </td>
                                    <td>
                                        @Html.ActionLink("Tomar", "Notificacion", "Notificaciones", new { id = item.IdAlerta }, new { })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <hr />
                </div>
            </div>
        </div>
    </div>
</div>
