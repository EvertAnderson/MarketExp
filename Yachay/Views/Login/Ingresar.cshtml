@{
    ViewBag.Title = "Ingresar";
    Layout = null;
}
@model Yachay.Entities.Usuarios
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/monster-admin/html/assets/images/favicon.png">
    <title>Monster Admin Template - The Most Complete & Trusted Bootstrap 4 Admin Template</title>
    @Styles.Render("~/Content/css")
    <!-- Bootstrap Core CSS -->
    <link href="~/Content/monster-admin/html/main/css/style.css" rel="stylesheet" />
    <link href="~/Content/monster-admin/html/main/css/default-dark.css" id="theme" rel="stylesheet" />
</head>

<body>
    <!-- ============================================================== -->
    <!-- Preloader - style you can find in spinners.css -->
    <!-- ============================================================== -->
    <div class="preloader">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
        </svg>
    </div>
    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <section id="wrapper">
        <div class="login-register" style="background-image:url(~/Content/monster-admin/html/assets/images/background/login-register.jpg); padding:5%;">
            @*<img src="~/Content/monster-admin/html/assets/images/background/login-register.jpg" />*@
            <div class="login-box card border-0">
                <div class="card-block" style="padding:0px;">
                    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-horizontal form-material" }))
                    {
                        <div class="text-center">
                            @*<img src="~/Content/yachay/assets/yachay_logo.png" class="card-img-top img-responsive" alt="Card image cap" style="width:150px;height:173px;" />*@
                            @*<img src="~/Content/yachay/assets/yachay_logo_1.1.png" class="card-img-top img-responsive" alt="Card image cap" style="width:174px;height:173px;" />*@
                            <img src="~/Content/yachay/assets/yachay_logo_1.1.png" class="card-img-top img-responsive" alt="Card image cap" style="width:234px;height:232px;" />
                        </div>

                        <h3 class="box-title m-b-20">Ingresar</h3>
                        <div class="form-group ">
                            <div class="col-xs-12">
                                @*<input class="form-control" type="text" required="" placeholder="Nombre">*@
                                @Html.TextBoxFor(u => u.Email, new { @class = "form-control", @placeholder = "Email", @type = "text", @required = "required" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                @*<input class="form-control" type="password" required="" placeholder="Contraseña">*@
                                @Html.TextBoxFor(u => u.Password, new { @class = "form-control", @placeholder = "Contraseña", @type = "password", @required = "required" })
                            </div>
                        </div>
                        <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Ingresar</button>
                        <div class="form-group">
                            <div class="col-md-12">
                                @*<a href="@Url.Action("Index", "Mapa")" id="to-recover" class="text-dark pull-left"><i class="fa fa-map-marker m-r-5"></i> Regístrate</a>*@
                                @*<a href="#" class="text-info m-l-5 pull-left"><b>Regístrate</b></a>*@
                                <a href="@Url.Action("Index", "Mapa")" id="to-recover" class="text-dark pull-right"><i class="fa fa-map-marker m-r-5"></i> Ir al mapa</a>
                            </div>
                        </div>
                        <div class="form-group m-b-0">
                            <div class="col-sm-12 text-center">
                                <p>¿Aún no tienes una cuenta? <a href="@Url.Action("Registrate", "Login")" class="text-info m-l-5"><b>Regístrate</b></a></p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

    </section>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Content/bootstrap/js/tether.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Content/monster-admin/html/main/js/jquery.slimscroll.js"></script>
    <script src="~/Content/monster-admin/html/main/js/waves.js"></script>
    <script src="~/Content/monster-admin/html/main/js/sidebarmenu.js"></script>
    <script src="~/Content/monster-admin/html/assets/plugins/sticky-kit-master/dist/sticky-kit.min.js"></script>
    <script src="~/Content/monster-admin/html/main/js/custom.min.js"></script>
    <script src="~/Content/monster-admin/html/assets/plugins/styleswitcher/jQuery.style.switcher.js"></script>
</body>

</html>