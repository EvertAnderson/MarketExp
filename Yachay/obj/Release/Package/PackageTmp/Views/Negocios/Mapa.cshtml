            //var lugares = [];
            $.ajax({
                type: "GET",
                url: miBaseUrl,
                cache: false,
                data: { texto: texto },
                dataType: 'json',
                success: function (data) {
                    if (data.listaNodos.length > 0)
                    {
                        deleteMarkers();
                        addMarkers(data.listaNodos);
                        map.setZoom(14);
                        map.setCenter(new google.maps.LatLng(lugares[0].Direccion_Latitud, lugares[0].Direccion_Longitud));
                    }
                }
            });
        }

