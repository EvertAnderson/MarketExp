        $(function () {
            miBaseUrl = '@Url.Action("BuscarNegocios", "Negocios")';
            console.log(miBaseUrl);
            //Buscador para select 2
            $("#miBuscador").select2({
                ajax: {
                    type: 'GET',
                    url: miBaseUrl,
                    dataType: 'json',
                    delay: 750,
                    data: function (params) {
                        return {
                            q: params.term, // search term
                            page: params.page
                        };
                    },
                    processResults: function (data, page) {
                        page = page || 1;

                        var myResults = [];
                        $.each(data.elem.items, function (index, item) {
                            myResults.push({
                                'id': item.Nombre,
                                'text': item.Nombre,
                                'data': item.Direccion_texto
                            });
                        });

                        return {
                            results: myResults,
                            pagination: {
                                more: (page * 30) < data.total_count
                            }
                        };
                    },
                    cache: true
                },
                minimumInputLength: 1
            });

            
        });

        $('#buscador').keyup(function (e) {
            if (e.keyCode == 13) {
                BuscarNegocios($(this).val());
            }
