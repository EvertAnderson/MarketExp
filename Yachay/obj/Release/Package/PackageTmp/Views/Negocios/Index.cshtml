@model IEnumerable<Yachay.Entities.Negocio>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row page-titles">
        <div class="col-md-6 col-8 align-self-center">
            <h3 class="text-themecolor m-b-0 m-t-0">Negocios</h3>
        </div>
        <div class="col-md-6 col-4 align-self-center">
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-block">
                    <div class="col-md-12" style="margin-bottom:7px;">
                        <a class="btn btn-md btn-success pull-left" href="@Url.Action("Mapa", "Negocios")">Mapa</a>
                        <a class="btn btn-md btn-info pull-right" href="@Url.Action("Negocio", "Negocios")">Nuevo</a>
                    </div>
                    <br />
                    <table class="dataTable table table-striped table-hover" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>
                                    Nombre
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Dirección
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Nombre
                                    </td>
                                    <td>
                                        @item.email_Negocio
                                    </td>
                                    <td>
                                        @item.Direccion_texto
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Negocio", "Negocios", new { id = item.id_Negocio }, new { }) |
                                        @Html.ActionLink("Productos", "Productos", "Negocios", new { id_Negocio = item.id_Negocio }, new { })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <hr />
                </div>
            </div>
        </div>
    </div>
</div>



